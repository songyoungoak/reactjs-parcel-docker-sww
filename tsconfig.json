{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDirs": [
      "./src"
    ],
    "experimentalDecorators": true,
    "jsx": "react",
    "declaration": false,
    "alwaysStrict": true,
    "allowJs": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es7",
      "es5",
      "es2015.promise",
      "es2015.generator",
      "es2016",
      "dom"
    ],
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
